<h1>Listing pdf_reports</h1>
<table>
  <thead>
    <tr>
        <th>Report Id</th>
        <th>DR list</th>
        <th>Status</th>
        <th>Job</th>
        <th>PDF Report</th>
        <th></th>
    </tr>
  </thead>
  <tbody>
    <% @pdf_reports.each do |pdf_report| %>
      <tr>
        <td><%= pdf_report.id %></td>
        <td><%= pdf_report.dr_list %></td>
        <td><%= pdf_report.status %></td>
        <td><%= pdf_report.delayed_job_id %></td>
        <td>
          <% if pdf_report.status == PdfReport::Status::Done %>
              <%= link_to 'Download', download_pdf_report_path(pdf_report) %>
          <%end%>
        </td>
        <td><%= link_to 'Destroy', pdf_report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
